
<atlassian-plugin key="${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">img/max.png</param>
        <param name="plugin-logo">img/logo.png</param>
    </plugin-info>
    <resource name="img-fullwindow/" type="download" location="img/" />
    
    <web-resource key="confluence-editor-fullwindow">
        <resource type="download" name="confluence.editor.fullwindow.css" location="css/confluence.editor.fullwindow.css"/>
        <resource type="download" name="confluence.editor.fullwindow.js" location="js/confluence.editor.fullwindow.js" />
        <context>editor</context>
    </web-resource>
</atlassian-plugin>
